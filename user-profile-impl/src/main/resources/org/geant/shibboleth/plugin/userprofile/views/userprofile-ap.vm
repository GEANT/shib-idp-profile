            </a>
          </li>
          #end

          #if ($logoutUrl)
          <li>
            <a href="$logoutUrl">
              <span class="navicon">
                <img src="/idp/icons/logout.svg" />
              </span>
              <span class="navlabel">#springMessageText("userProfile.menu.logout", "Log Out")</span>
            </a>
          </li>
          #end
        </ul>
      </nav>
    </div>


    <section id="banner">
        <!-- TODO explanatory message -->
        <div>
          #springMessageText("userProfile.allActivity.heading", "All Activity")
        </div>
    </section>


    <!-- =========== */
    /*      Main     */
    /* ============ -->
